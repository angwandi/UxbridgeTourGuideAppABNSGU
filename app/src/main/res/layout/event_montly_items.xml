<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/em_image_view"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/uxbridge" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/em_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/em_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_location" />

        <TextView
            android:id="@+id/em_organiser_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_organiser" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/em_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_date"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/em_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_time" />
    </LinearLayout>
</LinearLayout>
