<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.CommunityFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="78dp">
    <TextView
        android:paddingTop="16dp"
        android:id="@+id/com_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/com_name"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="16dp"
        android:textSize="24sp"/>
    <TextView
        android:paddingRight="16dp"
        android:id="@+id/com_details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/com_name_text_view"
        android:text="@string/com_details"/>
    <Button
        android:id="@+id/com_join__button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="?attr/colorPrimary"
       android:layout_below="@id/com_details_text_view"
        android:text="Join"
        android:gravity="start" />

</RelativeLayout>

</FrameLayout>
