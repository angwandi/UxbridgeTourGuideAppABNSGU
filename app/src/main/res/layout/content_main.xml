<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cropToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:id="@+id/homeImage_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@drawable/uxbridge" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/homePeriod_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1950"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/homeText_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/homePeriod_text_view"
            android:text="@string/h_detail_description" />
    </RelativeLayout>
</LinearLayout>
